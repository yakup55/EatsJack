@using EntityLayers.Concerete
@model List<Eats>
@{
    ViewBag.Title = "AllEatsChefs";
    Layout = "~/Views/Shared/EatsChefsLayout.cshtml";
}
<br />
<br />
<br />
<script src="~/Scripts/bootstrap.min.js"></script>
<!DOCTYPE html>
<button class="btn btn-primary">Tüm Yemekler</button>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="card">
            <div class="card-header">
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <!-- /.card-header -->
                        @using (Html.BeginForm("AllEatsChefs", "ChefsPanel", FormMethod.Post))
                        {

                            <p>
                                Aranacak Kelimeyi Giriniz @Html.TextBox("f")
                                <input type="submit" value="Ara" class="btn btn-secondary" />
                            </p>
                        }
                        <div class="card-body table-responsive p-0" style="height: 300px;">
                            <table class="table table-head-fixed text-nowrap ">

                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Yemek Adı</th>
                                        <th>Resim</th>
                                        <th>Kategori</th>
                                    </tr>
                                </thead>
                                @foreach (var x in Model)
                                {
                                    <tbody>
                                        <tr>
                                            <td>
                                                @x.EatsId
                                            </td>
                                            <td>
                                                <a>
                                                    @x.EatsName
                                                </a>
                                                <br />
                                                <small>
                                                    @x.EatsDate.ToString("dd-MMMM-yyyy")
                                                </small>
                                            </td>
                                            <td class="project-state">
                                                <img src="@x.EatsImage" height="75" width="75"></img>
                                            </td>
                                            <td class="project-state">
                                                <span class="">@x.Category.CategoryName</span>
                                            </td>
                                            <td class="project-actions text-right">
                                                <a class="btn btn-primary btn-sm" href="/Eats/EatsInformation/@x.EatsId">
                                                    <i>
                                                    </i>
                                                    Yemek Detayı
                                                </a>

                                            </td>
                                        </tr>
                                        <tr>
                                        </tr>
                                    </tbody>

                                }
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </section>
</body>
</html>

