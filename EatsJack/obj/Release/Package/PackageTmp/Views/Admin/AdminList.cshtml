@using EntityLayers.Concerete
@model List<Admin>
@{
    ViewBag.Title = "AdminList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="col-sm-12 col-xl-12">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Admin Listesi</h6>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Admin Adı</th>
                    <th scope="col">Şifre</th>
                    <th scope="col">Admin Derece</th>
                    <th scope="col">Güncelle</th>
                    <th scope="col">Sil</th>
                </tr>
            </thead>
            @foreach (var x in Model)
            {
                <tbody>
                    <tr>
                        <td>@x.AdminİD</td>
                        <td>@x.AdminName</td>
                        <td>@x.AdminPassword</td>
                        <td>@x.AdminRole</td>
                        <td>
                            <a href="/Admin/AdminUpdate/@x.AdminİD" class="btn btn-danger">Güncelle</a>
                        </td>
                        <td>
                            <a href="/Admin/AdminDelete/@x.AdminİD" class="btn btn-danger">Sil</a>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</div>
<a href="/Admin/AdminAdd" class="btn btn-outline-warning">Admin Ekle</a>