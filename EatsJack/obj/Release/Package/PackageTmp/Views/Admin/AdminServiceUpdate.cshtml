@model EntityLayers.Concerete.Service
@{
    ViewBag.Title = "AdminServiceUpdate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("AdminServiceUpdate", "Admin", FormMethod.Post))
{
    <div class="active tab-pane" id="settings">
        <form class="form-horizontal">
            <div class="form-group row">
                <div class="col-sm-10">
                    @Html.HiddenFor(x => x.ServiceId, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label for="inputName" class="col-sm-2 col-form-label">Service Adı</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.ServiceName, new { @class = "form-control" })
                </div>
            </div>
           
            <div class="form-group row">
                <label for="inputName2" class="col-sm-2 col-form-label">Service Açıklama</label>
                <div class="col-sm-10">
                    <div class="col-sm-10">
                        @Html.TextAreaFor(x => x.ServiceContents, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-sm-2 col-sm-10">
                    <button type="submit" class="btn btn-outline-success">Güncelle</button>
                </div>
            </div>
        </form>
    </div>


    <br>
}

