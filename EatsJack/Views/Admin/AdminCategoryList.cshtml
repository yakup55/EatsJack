@using EntityLayers.Concerete
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Category>
@{
    ViewBag.Title = "AdminCategoryList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="col-sm-12 col-xl-12">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Kategoriler</h6>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                <div class="bg-secondary rounded h-100 p-4">
                    <table class="table table-bordered">
                        <thead>
                            <tr class="text-white">
                                <th scope="col">Kategori Adı</th>
                                <th scope="col">Kategori Tanım </th>
                                <th scope="col">Kategori Durum</th>
                                <th scope="col">Aktif Yap</th>
                                <th scope="col">Pasif Yap</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sil</th>
                            </tr>
                        </thead>
                        @foreach (var x in Model)
                        {
                            <tbody>
                                <tr>
                                    <td>@x.CategoryName</td>
                                    <td>@x.CategoryDescription</td>
                                    <td>@x.CategoryStatus</td>
                                    <td><a class="btn btn-sm btn-primary" href="/Admin/AdminCategoryTrue/@x.CategoryId">Aktif Yap</a></td>
                                    <td><a class="btn btn-sm btn-primary" href="/Admin/AdminCategoryFalse/@x.CategoryId">Pasif Yap</a></td>
                                    <td><a class="btn btn-sm btn-primary" href="/Admin/AdminCategoryUpdate/@x.CategoryId">Güncelle</a></td>
                                    <td><a class="btn btn-sm btn-primary" href="/Admin/AdminCategoryDelete/@x.CategoryId">Sil</a></td>
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
            </div>
            <a href="/Admin/AdminCategoryAdd" class="btn btn-outline-warning">Kategori Ekle</a>
        </div>
    </div>
</div>
@Html.PagedListPager((IPagedList)Model, p => Url.Action("AdminCategoryList", new { p }), new PagedListRenderOptions
{
LiElementClasses = new List<string>
{"page-link"}
})