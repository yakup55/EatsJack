@model EntityLayers.Concerete.About
@{
    ViewBag.Title = "AdminAboutAdd";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("AdminAboutAdd", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="active tab-pane" id="settings">
    <form class="form-horizontal">
        <div class="form-group row">
            <div class="col-sm-10">
                @Html.HiddenFor(x => x.AboutİD, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Hakkımda Detay</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.AboutDetails, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName2" class="col-sm-2 col-form-label">Resim </label>
            <div class="col-sm-10">
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="AboutImage" placeholder="" required="">
                    @Html.ValidationMessageFor(x => x.AboutImage, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-outline-warning">Ekle</button>
            </div>
        </div>
    </form>
</div>
}