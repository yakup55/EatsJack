@using EntityLayers.Concerete
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Register>
@{
    ViewBag.Title = "AdminRegisterList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Kullanıcı Bilgisi</h6>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Mail Adresi</th>
                    <th scope="col">Şifre</th>
                    <th scope="col">Şifre Tekrar</th>
                    <th scope="col">Sil</th>
                </tr>
            </thead>
            @foreach (var x in Model)
            {
                <tbody>
                    <tr>
                        <th scope="row">@x.RegisterId.</th>
                        <td>@x.RegisterMail</td>
                        <td>@x.RegisterPassword</td>
                        <td>@x.RegisterPasswordAgain</td>
                        <td>
                            <a href="/Admin/AdminRegisterDelete/@x.RegisterId" class="btn btn-danger">Sil</a>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</div>
@Html.PagedListPager((IPagedList)Model, p => Url.Action("AdminRegisterList", new { p }), new PagedListRenderOptions
{
LiElementClasses = new List<string>
{"page-link"}
})