@model EntityLayers.Concerete.Register
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/EatsLayout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm("Register", "Register", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="login-contect py-5">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="container py-xl-5 py-3">
            <div class="login-body">
                <div class="login p-4 mx-auto">
                    <h5 class="text-center mb-4">Aramıza Katıl</h5>
                    <form action="#" method="post">
                        <div class="form-group">
                            <label>Email Adresiniz</label>
                            @Html.TextBoxFor(x => x.RegisterMail, new {@class="form-control"})
                            @Html.ValidationMessageFor(x=>x.RegisterMail, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="mb-2">Şifreniz</label>
                            @Html.TextBoxFor(x => x.RegisterPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.RegisterPassword, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="mb-2">Şifre Tekrar</label>
                            @Html.TextBoxFor(x => x.RegisterPasswordAgain, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.RegisterPasswordAgain, "", new { @class = "text-danger" })
                        </div>
                        <button type="submit" class="btn submit mb-4">Kayıt Ol</button>
                        <p class="account-w3ls text-center text-da">
                            Yemek Eklemeye Ne Dersin?
                            <a href="/Register/RegisterChefs">Şef Ol</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
}